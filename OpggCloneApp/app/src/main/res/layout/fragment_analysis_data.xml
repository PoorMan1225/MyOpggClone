<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/winTeamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:text="승리팀"
        android:textColor="@color/win_background"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/loseTeamTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/winTeamAverageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/win_background"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/winTeamTextView"
        app:layout_constraintStart_toStartOf="@+id/winTeamTextView"
        app:layout_constraintTop_toBottomOf="@+id/winTeamTextView"
        tools:text="6.6" />

    <TextView
        android:id="@+id/loseTeamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="패배팀"
        android:textColor="@color/lose_background"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/winTeamTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loseTeamAverageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/lose_background"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/loseTeamTextView"
        app:layout_constraintStart_toStartOf="@+id/loseTeamTextView"
        app:layout_constraintTop_toBottomOf="@+id/loseTeamTextView"
        tools:text="6.6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loseTeamAverageTextView"
        tools:listitem="@layout/analysis_data_item" />

</androidx.constraintlayout.widget.ConstraintLayout>